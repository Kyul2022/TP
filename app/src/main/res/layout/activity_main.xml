<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:text="Se connecter"
        android:textStyle="bold"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:text="Pseudo"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Type somethig"
        android:layout_marginStart="40dp"
        android:paddingEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/radius"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="20dp"
        android:text="Mot de passe"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Type somethig"
        android:layout_marginStart="40dp"
        android:background="@drawable/radius"
        android:paddingEnd="10dp"
        android:drawableRight="@drawable/eye"
        />
    <Button
        android:background="@drawable/radius"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:text="Se connecter "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginTop="20dp"
        android:text="Mot de passe oulie?"
        android:textStyle="bold"
        android:textColor="#706CFA"
        android:layout_marginBottom="30dp"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="128dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="7dp"
            android:layout_height="2dp"
            android:background="#525156"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:textSize="18sp"
            android:text="Ou"/>
        <TextView
            android:layout_width="128dp"
            android:layout_marginTop="7dp"
            android:layout_height="2dp"
            android:background="#525156"/>
    </LinearLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/radius"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:textColor="@color/black"
        android:text="Continuer avec Google "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:text="Vous avez pas de compte?"
        android:textStyle="bold"
        android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="Creez um compte"
            android:textStyle="bold"
            android:textColor="#706CFA"
            android:textSize="14sp"/>
</LinearLayout>
</LinearLayout>